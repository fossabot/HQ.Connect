<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net461;net462</TargetFrameworks>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <Version>2.0.2</Version>
    <Authors>Daniel Crenna</Authors>
    <Company />
    <PackageIconUrl>http://apitize.com.s3.amazonaws.com/logo_generic.png</PackageIconUrl>
    <PackageLicenseUrl>https://github.com/danielcrenna/tophat/blob/master/LICENSE.md</PackageLicenseUrl>
    <PackageProjectUrl>http://github.com/danielcrenna/tophat</PackageProjectUrl>
    <Copyright>(c) 2012-2018 Daniel Crenna</Copyright>
    <Description>Provides unit-of-work style connection scoping to any ADO.NET supporting database.</Description>
    <PackageReleaseNotes>v2.0.0 - .NET Standard support and API redesign
v2.0.1 - Add support for IDataConnection resolution with classless scopes</PackageReleaseNotes>
    <PackageTags>IDbConnection Dapper SqlServer Sqlite</PackageTags>
    <FileVersion>2.0.2.0</FileVersion>
    <AssemblyVersion>2.0.2.0</AssemblyVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Http.Abstractions" Version="2.0.2" />
    <PackageReference Include="Microsoft.Data.SQLite" Version="2.0.1" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="2.0.0" />
    <PackageReference Include="System.Data.SqlClient" Version="4.4.3" />
    <PackageReference Include="System.Reflection.Emit.Lightweight" Version="4.3.0" />
  </ItemGroup>

</Project>
